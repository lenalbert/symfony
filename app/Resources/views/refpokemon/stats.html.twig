{% extends 'base.html.twig' %}

{% block title %}
    Statistiques
{% endblock %}

{% block body %}
    <div class="content">
        <section class="hero is-bold is-warning">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">Pokedex</h1>
                    <h2 class="subtitle">Consultez le nombre de Pokemons par type</h2>
                </div>
            </div>
        </section>
        <div class="container">
            {% if types is defined %}
                {% if types is not empty %}
                    <table class="table is-hoverable">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Nombre</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for key, val in types %}   
                            <tr>
                                <td>{{ key|capitalize }}</td>
                                <td>{{ val }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>Il n'y a pas de type Ã  afficher</p>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}

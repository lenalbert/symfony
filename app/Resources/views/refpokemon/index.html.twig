{% extends 'base.html.twig' %}

{% block title %}
    Pokedex
{% endblock %}

{% block body %}
    <div class="content">
        <section class="hero is-bold is-warning">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">Pokedex</h1>
                    <h2 class="subtitle">Consultez la liste des Pokemons</h2>
                    <div class="field is-grouped is-grouped-multiline">
                        <div class="control">
                            <div class="tags has-addons">
                                <span class="tag is-link">{{ nbPokemons|default("0") }}</span>
                                <span class="tag is-light">Pokemon(s)</span>
                            </div>
                        </div>
                        <div class="control">
                            <div class="tags has-addons">
                                <span class="tag is-link">{{ nbBases|default("0") }}</span>
                                <span class="tag is-light">base(s)</span>
                            </div>
                        </div>
                        <div class="control">
                            <div class="tags has-addons">
                                <span class="tag is-link">{{ nbEvos|default("0") }}</span>
                                <span class="tag is-light">Ã©volution(s)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="container">
            {% if pokemons is defined %}
                {% if pokemons is not empty %}
                    <table class="table is-hoverable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Type</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pkm in pokemons %}
                                <tr>
                                    <td>{{ pkm.id }}</td>
                                    <td>{{ pkm.nom }}</td>
                                    <td>{{ pkm.type }}</td>
                                    <td>
                                      <a href="{{ path('refpokemon_show', { id: pkm.id }) }}" class="button is-outlined is-link">Consulter</a>
                                      <a href="{{ path('refpokemon_delete', { id: pkm.id }) }}" class="button is-outlined is-danger">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>Votre Pokedex est vide</p>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}
